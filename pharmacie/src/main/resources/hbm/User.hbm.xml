<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="poei.persistance.bean.User" table="user">
		<!-- la clé primaire -->
		<id name="id" column="id" type="integer">
			<generator class="identity"></generator>
		</id>
		<!-- les propriétés simples -->
		<property name="nom" column="nom"></property>
		<property name="prenom" column="prenom"></property>
		<property name="adresse" column="adresse"></property>
		<property name="email" column="email"></property>
		<property name="mot_de_passe" column="mot_de_passe"></property>
		
	</class>
</hibernate-mapping>